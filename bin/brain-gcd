#!/usr/bin/env node
import { getJSDocEnumTag } from 'typescript';
import {playGame, randomFrom1to99, question} from '../src/index.js'
const gcdPlayRools = 'Find the greatest common divisor of given numbers'

const playGSD = () => {
    let a = randomFrom1to99(3)
    let b = randomFrom1to99()

    question(`${a} ${b}`)
    let counter = 1;
    let gsd = b;

    while (b/counter >= 1) {
        gsd = b/counter
        if (Math.floor(b/gsd)*gsd === b) {
            if (Math.floor(a/(gsd))*gsd === a) {
                return `${gsd}`
            }
        }
        counter++
    }
    return `${gsd}`
}


playGame(gcdPlayRools, playGSD)