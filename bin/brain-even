#!/usr/bin/env node
import name from '../src/cli.js'
import {randomFrom1to99, playGame, question} from '../src/index.js'
import readline from 'readline-sync'

const evenPlayRools = 'Answer "yes" if the number is even, otherwise answer "no".'



const playEven = () => {
  //const userName = name()
    let number = randomFrom1to99()
    console.log('Question: ', number)
    const answer = readline.question('Your answer: ')
    
    let rightAnswer = number % 2 === 0 ? 'yes' : 'no'

    return [rightAnswer, answer]   
}

playGame(evenPlayRools, playEven)
//console.log(playEven())

// playEven(userName)
export default playEven
