#!/usr/bin/env node
import name from '../src/cli.js'

import {randomFrom1to99, playGame, question} from '../src/index.js'
const evenPlayRools = 'Answer "yes" if the number is even, otherwise answer "no".'

const evenLog = (num) => num % 2 === 0 ? 'yes' : 'no'


const playEven = () => {
    const userName = name;

    let number = randomFrom1to99()
    question(number)
 
    let answer = evenLog(number)

    return [number, answer]    
}

playGame(evenPlayRools, playEven)
//console.log(playEven())

