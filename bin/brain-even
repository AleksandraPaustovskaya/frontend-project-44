#!/usr/bin/env node
//import  playGame from '../src/index.js'
const evenPlayRools = 'Answer "yes" if the number is even, otherwise answer "no".'
import playGame from "../src/index.js"



const playEven = (random) => {
  let number = random()
  
  let rightAnswer = number % 2 === 0 ? 'yes' : 'no'

  return [number, rightAnswer]   
}

playGame(evenPlayRools, playEven)

export default evenPlayRools